<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DashboardFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="60dp"
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_alignParentBottom="true"
        tools:layout_editor_absoluteX="0dp">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="New Event Form"
            android:textColor="#EEE"
            android:layout_marginBottom="20dp"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/txtEventID"
            android:layout_width="450dp"
            android:layout_height="wrap_content"
            android:text="Event ID"
            android:textColor="#EEE"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/editEventID"
            android:layout_width="450dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="text"
            android:hint="Auto-generated"
            android:textColor="#eee"
            android:textColorHint="#888"
            android:enabled="false"/>

        <TextView
            android:id="@+id/txtCategoryID"
            android:layout_width="450dp"
            android:layout_height="wrap_content"
            android:text="Category ID"
            android:textColor="#EEE"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/editCategoryID"
            android:layout_width="450dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="text"
            android:hint="Enter Category ID"
            android:textColor="#eee"
            android:textColorHint="#888"/>

        <TextView
            android:id="@+id/txtEventName"
            android:layout_width="450dp"
            android:layout_height="wrap_content"
            android:text="Event Name"
            android:textColor="#EEE"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/editEventName"
            android:layout_width="450dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="text"
            android:hint="Enter Event Name"
            android:textColor="#EEE"
            android:textColorHint="#888" />

        <TextView
            android:id="@+id/txtTicketsAvailable"
            android:layout_width="450dp"
            android:layout_height="wrap_content"
            android:text="Tickets Available"
            android:textColor="#EEE"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/editTicketsAvailable"
            android:layout_width="450dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="text"
            android:hint="Enter Tickets Available"
            android:textColor="#EEE"
            android:textColorHint="#888" />


        <Switch
            android:id="@+id/switchIsActive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Is Active?"
            android:textColor="#EEE"
            android:switchMinWidth="50dp"
            android:switchPadding="20dp"
            android:textSize="16sp"/>
        <FrameLayout
            android:id="@+id/touchpad_area"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:background="@android:color/holo_blue_light"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"/>

    </LinearLayout>
    </ScrollView>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/fab"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="16dp"
        android:src="@drawable/baseline_add_24"/>
</RelativeLayout>